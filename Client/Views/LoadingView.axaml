<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:g="clr-namespace:Avalonia.Labs.Gif;assembly=Avalonia.Labs.Gif"
        x:Class="Client.LoadingView"
        Width="300" Height="100"
        SystemDecorations="None"
        Background="#fff"
        CanResize="False"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">

	<Grid>
        <TextBlock  TextAlignment="Center" VerticalAlignment="Top" FontSize="40">Loading</TextBlock>
		<g:GifImage Source="avares://Client/assets/loading.gif"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Stretch="Uniform"
                    Width="40"
                    Height="40"/>
	</Grid>

</Window>
