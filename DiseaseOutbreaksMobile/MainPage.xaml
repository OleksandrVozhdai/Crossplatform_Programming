<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiseaseOutbreaksMobile.MainPage"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <ScrollView>
        <VerticalStackLayout 
            Padding="30,0" 
            Spacing="25"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Dotnet bot waving"
                HorizontalOptions="Center" />

            <Label 
                Text="Добро пожаловать в Детектор Вспышек"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label 
                Text="Нажмите, чтобы войти через Identity Server"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Login prompt"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Войти"
                Clicked="OnLoginClicked" 
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>