@model disease_outbreaks_detector.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign in";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COVID-19 Monitor</title>
    <link href="https://fonts.googleapis.com/css2?family=Familjen+Grotesk:wght@400;500;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/Style.css" />
    <style>
        .login-container {
            max-width: 420px;
            margin: 80px auto;
            padding: 40px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            text-align: center;
            font-family: 'Familjen Grotesk', sans-serif;
        }

            .login-container h2 {
                font-size: 28px;
                font-weight: 800;
                color: #201e1c;
                margin-bottom: 30px;
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .form-group label {
                display: block;
                font-weight: 500;
                color: #333;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 16px;
                box-sizing: border-box;
            }

                .form-group input:focus {
                    outline: none;
                    border-color: #007bff;
                    box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
                }

        .login-btn {
            display: block;
            width: 100%;
            padding: 14px;
            margin: 12px 0;
            border: none;
            border-radius: 50px;
            font-size: 18px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            font-family: 'Familjen Grotesk', sans-serif;
        }

        .btn-primary {
            background: #007bff;
            color: white;
        }

        .btn-google {
            background: #dc3545;
            color: white;
        }

        .btn-back {
            background: #6c757d;
            color: white;
            margin-top: 20px;
        }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .text-danger {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
            display: block;
        }

        .divider {
            margin: 25px 0;
            font-size: 14px;
            color: #888;
            position: relative;
        }

            .divider::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 1px;
                background: #ddd;
            }

            .divider span {
                background: white;
                padding: 0 15px;
                z-index: 1;
                position: relative;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Sign in to your account</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group remember-me">
                <label class="checkbox-label">
                    <span class="remember-text">@Html.DisplayNameFor(m => m.RememberMe)</span>
                    <input asp-for="RememberMe" />
                    <span class="checkmark"></span>
                </label>
            </div>

            <button type="submit" class="login-btn btn-primary">Sign in</button>
        </form>

        <div class="divider"><span>or</span></div>

        <!-- GOOGLE -->
        <a asp-controller="Account"
           asp-action="ExternalLogin"
           asp-route-provider="Google"
           class="login-btn btn-google">
            Login with Google
        </a>

        <!-- CREATE NEW ACCOUNT -->
        <a asp-controller="Account"
           asp-action="Register"
           class="login-btn btn-primary">
            Create new account
        </a>

        <!-- BACK TO HOME -->
        <a asp-controller="HomePage"
           asp-action="Index"
           class="login-btn btn-back">
            Back to home
        </a>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>