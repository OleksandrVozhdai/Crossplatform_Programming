@model disease_outbreaks_detector.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COVID-19 Monitor</title>
    <link href="https://fonts.googleapis.com/css2?family=Familjen+Grotesk:wght@400;500;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/Style.css" />
    <style>
        .register-container {
            max-width: 420px;
            margin: 80px auto;
            padding: 40px;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            text-align: center;
            font-family: 'Familjen Grotesk', sans-serif;
        }

            .register-container h2 {
                font-size: 28px;
                font-weight: 800;
                color: #201e1c;
                margin-bottom: 30px;
            }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .form-group label {
                display: block;
                font-weight: 500;
                color: #333;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 16px;
                box-sizing: border-box;
                transition: border 0.3s;
            }

                .form-group input:focus {
                    outline: none;
                    border-color: #007bff;
                    box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
                }

        .register-btn {
            display: block;
            width: 100%;
            padding: 14px;
            margin: 20px 0;
            border: none;
            border-radius: 50px;
            font-size: 18px;
            font-weight: 500;
            background: #007bff;
            color: white;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .register-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }

        .text-danger {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
            display: block;
        }

        .btn-back {
            display: block;
            width: 100%;
            padding: 14px;
            margin-top: 10px;
            background: #6c757d;
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 50px;
            font-size: 16px;
            transition: all 0.3s;
        }

            .btn-back:hover {
                background: #5a6268;
                transform: translateY(-2px);
            }
    </style>
</head>
<body>
    <div class="register-container">
        <h2>Create new account</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username">Username (max 50 chars)</label>
                <input asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FullName">Full Name (max 500 chars)</label>
                <input asp-for="FullName" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Phone (+380XXXXXXXXX)</label>
                <input asp-for="Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password (8-16 chars, 1 digit, 1 symbol, 1 uppercase)</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="register-btn">Register</button>
        </form>

        <a asp-controller="Account" asp-action="Login" class="btn-back">
            Already have an account? Sign in
        </a>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>