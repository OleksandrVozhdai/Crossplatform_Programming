@model disease_outbreaks_detector.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COVID-19 Monitor</title>
    <link href="https://fonts.googleapis.com/css2?family=Familjen+Grotesk:wght@400;500;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/Style.css" />
    <link rel="stylesheet" href="~/Styles/Auth.css" />
</head>
<body>
    <div class="register-container">
        <h2>Create new account</h2>

        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username">Username (max 50 chars)</label>
                <input asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FullName">Full Name (max 500 chars)</label>
                <input asp-for="FullName" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Phone (+380XXXXXXXXX)</label>
                <input asp-for="Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password (8-16 chars, 1 digit, 1 symbol, 1 uppercase)</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="register-btn">Register</button>
        </form>

        <a asp-controller="Account" asp-action="Login" class="btn-back">
            Already have an account? Sign in
        </a>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>