@{
    var record1 = ViewBag.Record1 as disease_outbreaks_detector.Models.CaseRecord;
    var record2 = ViewBag.Record2 as disease_outbreaks_detector.Models.CaseRecord;
    var country1 = ViewBag.Country1 as string;
    var country2 = ViewBag.Country2 as string;
    var error = ViewBag.Error as string;
}

<head>
    <title>Compare Countries</title>
    <link rel="stylesheet" href="~/Styles/HomePage.css" />
    <link rel="stylesheet" href="~/Styles/Style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Familjen+Grotesk&display=swap" rel="stylesheet">
</head>

<body>
