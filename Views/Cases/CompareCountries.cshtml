                </div>
            </div>
        </div>
        <span class="bottom-header-line"> </span>
    </header>

    <div class="container">
        <h1>Compare COVID-19 Data</h1>

        <form method="get" asp-action="CompareCountries">
            <input type="text" name="country1" value="@country1" placeholder="Country 1" required />
            <input type="text" name="country2" value="@country2" placeholder="Country 2" required />
            <button type="submit">Compare</button>
        </form>

        @if (!string.IsNullOrEmpty(error))
        {
            <div class="alert alert-warning">@error</div>
        }
        else if (record1 != null && record2 != null)
        {
            <h1 style="margin-bottom:10px; margin-top: 20px; font-size: 25px;">
                @country1
            </h1>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Cases</h3>
                    <p>@(record1.Cases > 0 ? record1.Cases.ToString("N0") : "N/A")</p>
                </div>
                <div class="stat-card">
                    <h3>Deaths</h3>
                    <p>@(record1.Deaths > 0 ? record1.Deaths.ToString("N0") : "N/A")</p>
                </div>
                <div class="stat-card">
                    <h3>Recovered</h3>
                    <p>@(record1.Recovered > 0 ? record1.Recovered.ToString("N0") : "N/A")</p>
                </div>
                <div class="stat-card">
                    <h3>Population</h3>
                    <p>@(record1.population > 0 ? record1.population.ToString("N0") : "N/A")</p>
                </div>
            </div>

            <h1 style="margin-bottom:10px; font-size: 25px;">@country2</h1>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Cases</h3>
                    <p>@(record2.Cases > 0 ? record2.Cases.ToString("N0") : "N/A")</p>
                </div>
                <div class="stat-card">
                    <h3>Deaths</h3>
                    <p>@(record2.Deaths > 0 ? record2.Deaths.ToString("N0") : "N/A")</p>
                </div>
                <div class="stat-card">
                    <h3>Recovered</h3>
                    <p>@(record2.Recovered > 0 ? record2.Recovered.ToString("N0") : "N/A")</p>
                </div>
                <div class="stat-card">
                    <h3>Population</h3>
                    <p>@(record2.population > 0 ? record2.population.ToString("N0") : "N/A")</p>
                </div>
            </div>
        }
    </div>
</body>
