@model disease_outbreaks_detector.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign in";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COVID-19 Monitor</title>
    <link href="https://fonts.googleapis.com/css2?family=Familjen+Grotesk:wght@400;500;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/Style.css" />
    <link rel="stylesheet" href="~/Styles/Auth.css" />
   
</head>
<body>
    <div class="login-container">
        <h2>Sign in to your account</h2>

        <form asp-action="Login" method="post">
           

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group remember-me">
                <label class="checkbox-label">
                    <span class="remember-text">@Html.DisplayNameFor(m => m.RememberMe)</span>
                    <input asp-for="RememberMe" />
                    <span class="checkmark"></span>
                </label>
            </div>

            <button type="submit" class="login-btn btn-primary">Sign in</button>
        </form>

        <div class="divider"><span>or</span></div>

        <!-- GOOGLE -->
        <a asp-controller="Account"
           asp-action="ExternalLogin"
           asp-route-provider="Google"
           class="login-btn btn-google">
            Login with Google
        </a>

        <!-- CREATE NEW ACCOUNT -->
        <a asp-controller="Account"
           asp-action="Register"
           class="login-btn btn-primary">
            Create new account
        </a>

        <!-- BACK TO HOME -->
        <a asp-controller="HomePage"
           asp-action="Index"
           class="login-btn btn-back">
            Back to home
        </a>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>